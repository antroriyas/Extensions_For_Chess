{
  "manifest_version": 3,
  "name": "Chess Analysis Assistant",
  "version": "0.1.0",
  "description": "One-click local engine analysis for games on Chess.com.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://lichess.org/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": [
        "content.js",
        "auto-analyze.js",
        "content-overlay.js"
      ],
      "css": ["ui/panel.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/panel.html",
        "ui/panel.js",
        "ui/panel.css",
        "stockfish/stockfish.js",
        "stockfish/stockfish.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": { "default_title": "Analyze game" }
}
